#!/usr/bin/perl -W

# To be used with pst
# Usage: cpy <file1> <file2> ...

if ($#ARGV == -1) {
	print "Usage: cpy <file1> <file2> ..\n";
	exit;
}

$CLIPBOARD = "$ENV{HOME}/tmp/.clipboard";
if (-d $CLIPBOARD) {
	`rm -r $CLIPBOARD/* -f`;
} else {
	mkdir $CLIPBOARD;
	print "Created $CLIPBOARD\n";
}

$DIR = `pwd`;
chop $DIR;
$DIR .= "/";

if ($DIR =~ /^\/cygdrive/) {
	$DIR = `cygpath -w "$DIR"`;
	chop $DIR;
	#grep s/\\/\//g, $DIR;

}

#print "$DIR$ARGV[0]\n";

while ($item = shift) {
	`cp -r $DIR$item $CLIPBOARD`;
}
